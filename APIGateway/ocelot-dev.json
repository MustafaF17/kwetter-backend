      ],

      "RateLimitOptions": {
        "ClientWhitelist": [],
        "EnableRateLimiting": true,
        "Period": "5s",
        "PeriodTimespan": 1,
        "Limit": 1
      },

      // Cache response
      "FileCacheOptions": { "TtlSeconds": 10 }
    },

